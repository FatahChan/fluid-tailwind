{
	"compilerOptions": {
		"target": "es2019",
		"lib": ["ES2019"],
		"module": "CommonJS",
		"declaration": true,
		"skipLibCheck": true,
		"declarationMap": false,
		"declarationDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist"
	},
	"include": ["src/**/*.ts", "jest/**/*.ts", "tests/**/*.ts"]
}
