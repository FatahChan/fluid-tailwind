{
	"name": "fluid-tailwind",
	"version": "0.1.0",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"license": "MIT",
	"repository": "https://github.com/barvian/fluid-tailwind",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"scripts": {
		"test": "bun test",
		"build": "bun build ./src/util/* --outdir ./dist/util --target node --external '*' && bun build --entrypoints ./src/index.ts ./src/extractor.ts --outdir ./dist --target node --external '*'",
		"dev": "bun run build --watch",
		"postbuild": "tsc -p tsconfig.build.json --emitDeclarationOnly",
		"prepublishOnly": "bun run build && bun run test"
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"tailwindcss": "^3.2.0"
	},
	"devDependencies": {
		"@tailwindcss/container-queries": "^0.1.1",
		"@types/bun": "^1.0.5",
		"dlv": "^1.1.3",
		"@types/dlv": "^1.1.4",
		"jest-diff": "^29.7.0",
		"postcss": "^8.4.17",
		"prettier": "^2.7.1",
		"tailwindcss": "^3.2.0",
		"typescript": ">=5.0.0"
	},
	"dependencies": {
		"filter-obj": "^5.1.0",
		"map-obj": "^5.0.2",
		"picocolors": "^1.0.0",
		"tailwindcss-priv": "npm:tailwindcss@3.4.1"
	}
}
